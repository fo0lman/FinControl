<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close js-close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true"><i class="fa fa-times"></i></span></button>
            <h4 class="modal-title">Add transaction</h4>
        </div>
        <div class="modal-body">
            <form class="add-item-form">
                <div class="form-group">
                    <label for="inputDate" class="control-label">Date</label>
                    <input type="text" class="form-control dateInput" id="inputDate" placeholder="">
                </div>
                <div class="form-group">
                    <label for="inputSum" class=" control-label">Sum</label>
                    <input type="number" class="form-control" id="inputSum" placeholder="Sum">
                </div>

                <div class="form-group">
                    <label for="inputCategory" class=" control-label">Category</label>
                    <select class="form-control categoryType" id="inputCategory">
                        {{#each categories}}
                        <option>{{title}}</option>
                        {{/each}}                    
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputSource" class="control-label">Source</label>
                    <select class="form-control categoryType" id="inputSource">
                        {{#each sources}}
                        <option>{{title}}</option>
                        {{/each}}                    
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default js-close" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary js-add-item">Create</button>
        </div>
    </div>
</div>