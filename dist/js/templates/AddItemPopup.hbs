<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close js-close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">x</span></button>
            <h4 class="modal-title">Input new Item</h4>
        </div>
        <div class="modal-body">
            <div class="container">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputDate" class="col-sm-2 control-label">Date</label>

                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="inputDate" placeholder="Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSum" class="col-sm-2 control-label">Sum</label>

                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="inputSum" placeholder="Sum">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputCategory" class="col-sm-2 control-label">Category</label>

                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="inputCategory" placeholder="Category">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSource" class="col-sm-2 control-label">Source</label>

                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="inputSource" placeholder="Source">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default js-close" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary js-add-item">Add Item</button>
        </div>
    </div>
</div>