<div class="row">
    <div class="row dashboard-page-content text-center">
        <div class="col-md-8 col-md-offset-2">
            <h1>{{title}}</h1>
        </div>
    </div>
   <div class="row home-page-content">
        <div class="col-md-5">
            <form class="form-inline">
                <label for="inputBalance" class="col-sm-2 control-label">Balance:</label>
                <div class="col-sm-2">
                    <input type="text" class="input-medium" id="inputBalance" placeholder="Balance">
                </div>
            </form>
        </div>
    </div>
    <div class="row home-page-content main-page-nav">
        <form class="form-inline">
            <div class="btn-toolbar">
                <button type="button" class="btn btn-primary nav-pills">Add</button>
                <label class="col-sm-2">Favorite:</label>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary nav-pills">Интернет</button>
                    <button type="button" class="btn btn-primary nav-pills">Кварплата</button>
                    <button type="button" class="btn btn-primary nav-pills">Сотовый</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row main-page-nav">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Sum</th>
                    <th>Category</th>
                    <th>Source</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{date}}</td>
                    <td>{{sum}}</td>
                    <td>{{category}}</td>
                    <td>{{source}}</td>
                    <td>X</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>